    private void btntambahActionPerformed(java.awt.event.ActionEvent evt) {                                          
        DefaultTableModel model = (DefaultTableModel) jTable1.getModel();
        if (txturut.getText().trim().equals("") || txtnama.getText().trim().equals("")){
            JOptionPane.showMessageDialog(null, "Data yang Anda masukan belum lengkap");
        }else{
            model.addRow(new Object[]{txturut.getText(), txtnama.getText()});
        }
        // TODO add your handling code here:
    }                                         

    private void btnhapusActionPerformed(java.awt.event.ActionEvent evt) {                                         
        reset();
        // TODO add your handling code here:
    }                                        

    private void btnundiActionPerformed(java.awt.event.ActionEvent evt) {                                        
        undian = Integer.parseInt(txtundian.getText());
        hasil = intAcak(1, undian);
        txthasil.setText(Integer.toString(hasil));
        JOptionPane.showMessageDialog(this, "Selamat kepada nomor urut yang terpilih");
        // TODO add your handling code here:
    }                                       

